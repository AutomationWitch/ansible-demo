- name: Deploy basic web server
  hosts: all
  vars:
    index_title: Awesome web server
    index_content: I am {{ ansible_hostname | upper }} !
    
  tasks:
  - name: httpd package is present
    yum:
      name: httpd

  - name: latest index.html file is present
    template:
      src: index.html.j2
      dest: /var/www/html/index.html
      owner: apache
      group: apache

  - name: httpd is started
    service:
      name: httpd
      state: started
